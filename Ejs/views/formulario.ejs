<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <title>Formulario</title>
  </head>
  <body>
    <%- include('./partials/header.ejs')-%>
    
    <div class="row justify-content-center bg-secondary">
      <form method="post" action="/" class="rounded-3 bg-light col-3 p-2 m-3">
        <label for="titleProduct" class="form-label text-warning fs-3">Ingresar
          un producto</label>
        <input
          type="text"
          class="form-control"
          id="titleProduct"
          placeholder="Nombre del producto"
        />
        <label for="priceProduct" class="form-label text-warning fs-3">Ingresar
          un precio para el producto</label>
        <input
          type="text"
          class="form-control"
          id="priceProduct"
          placeholder="Precio del producto"
        />
        <label
          for="thumbnailProduct"
          class="form-label text-warning fs-3"
        >Ingresar una imagen</label>
        <input
          type="text"
          class="form-control"
          id="thumbnailProduct"
          placeholder="Imagen del producto"
        />

        <a href="#" ><button
          type="submit"
          class="form-control btn btn-warning mt-3"
          style="width:auto;margin-left:35%"
          id="btnProductSubmit"
        >
        Agregar Producto
        </button></a>
      </form>
    </div>
  </body>
</html>